<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/page_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/rc_item_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            layout="@layout/pageheader"/>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/top_page_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include
                layout="@layout/textbox" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/middle_page_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_add_overview_input_inner_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_ad_overview_name_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rc_icon_size_l"
                    android:padding="@dimen/rc_text_padding"
                    android:textColor="#000"
                    android:textSize="@dimen/extra_large_text_size"
                    android:text="Name"/>

                <TextView
                    android:id="@+id/textView_ad_overview_name"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rc_icon_size_l"
                    android:padding="@dimen/rc_text_padding"
                    android:textColor="#000"
                    android:textSize="@dimen/normal_text_size"
                    android:text="_"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_add_overview_input_inner_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_ad_overview_distance_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rc_icon_size_l"
                    android:padding="@dimen/rc_text_padding"
                    android:textColor="#000"
                    android:textSize="@dimen/extra_large_text_size"
                    android:text="Radius"/>

                <TextView
                    android:id="@+id/textView_ad_overview_radius"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rc_icon_size_l"
                    android:padding="@dimen/rc_text_padding"
                    android:textColor="#000"
                    android:textSize="@dimen/normal_text_size"
                    android:text="0 meters"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_add_overview_input_inner_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_ad_overview_setting_title"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rc_icon_size_l"
                    android:padding="@dimen/rc_text_padding"
                    android:textColor="#000"
                    android:textSize="@dimen/extra_large_text_size"
                    android:text="Setting"/>

                <TextView
                    android:id="@+id/textView_ad_overview_setting"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rc_icon_size_l"
                    android:padding="@dimen/rc_text_padding"
                    android:textColor="#000"
                    android:textSize="@dimen/normal_text_size"
                    android:text=""/>

            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/navigation_buttons"/>

</androidx.constraintlayout.widget.ConstraintLayout>