<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:map="http://schemas.android.com/tools"
    android:transitionName="container_transition"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            layout="@layout/header_icon"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
        </include>

        <include
            layout="@layout/subheader_double">
        </include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/rc_item_padding">

            <TextView
                android:id="@+id/textView_main_location_latitude"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:textSize="@dimen/normal_text_size"
                android:layout_marginStart="@dimen/rc_icon_size_l"
                android:padding="@dimen/rc_text_padding"/>

            <TextView
                android:id="@+id/textView_main_location_longitude"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:textSize="@dimen/normal_text_size"
                android:layout_marginStart="@dimen/rc_icon_size_l"
                android:padding="@dimen/rc_text_padding"/>

        </LinearLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/map_main"
            android:layout_margin="@dimen/rc_item_padding"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            map:liteMode="true"
            map:mapType="none" />

        <include
            layout="@layout/subheader"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>