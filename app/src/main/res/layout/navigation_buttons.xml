<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/layout_button_main"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navigation_buttons_height"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </Space>
        <Button
            android:id="@+id/button_navigation_left"
            android:layout_width="@dimen/rc_icon_size"
            android:layout_height="@dimen/rc_icon_size">
        </Button>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </Space>
        <Button
            android:id="@+id/button_navigation_middle"
            android:layout_width="@dimen/rc_icon_size"
            android:layout_height="@dimen/rc_icon_size">
        </Button>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </Space>
        <Button
            android:id="@+id/button_navigation_right"
            android:layout_width="@dimen/rc_icon_size"
            android:layout_height="@dimen/rc_icon_size">
        </Button>
        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
        </Space>

    </LinearLayout>
</RelativeLayout>