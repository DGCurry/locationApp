<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/rc_item_padding"
    android:background="@color/white"
    android:layout_margin="@dimen/rc_item_margin"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="@dimen/rc_icon_size"
            android:layout_height="@dimen/rc_icon_size"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_background">
        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_ad_location_title"
                android:layout_width="@dimen/rc_item_textbox_size"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textSize="@dimen/extra_large_text_size"
                android:padding="@dimen/rc_text_padding"
                android:text="Location"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_header_change"
            android:layout_gravity="center"
            android:layout_width="@dimen/rc_icon_size"
            android:layout_height="@dimen/rc_icon_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView_ad_location_latitude"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_text_size"
            android:layout_marginStart="@dimen/rc_icon_size"
            android:padding="@dimen/rc_text_padding"
            android:text="latitude" />

        <TextView
            android:id="@+id/textView_ad_location_longitude"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_text_size"
            android:layout_marginStart="@dimen/rc_icon_size"
            android:padding="@dimen/rc_text_padding"
            android:text="longitude" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/editText_ad_location_latitude"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginStart="@dimen/rc_icon_size"
            android:padding="@dimen/rc_text_padding"
            tools:text="" />

        <EditText
            android:id="@+id/editText_ad_location_longitude"
            android:layout_width="0dp"
            android:layout_weight=".5"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginStart="@dimen/rc_icon_size"
            android:padding="@dimen/rc_text_padding"
            tools:text="" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView_ad_distance"
            android:layout_width="@dimen/rc_item_textbox_size"
            android:layout_height="wrap_content"
            android:textSize="@dimen/large_text_size"
            android:layout_marginStart="@dimen/rc_icon_size"
            android:padding="@dimen/rc_text_padding"
            android:text="Radius" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/editText_ad_location_radius"
            android:layout_width="@dimen/rc_item_textedit_size"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginStart="@dimen/rc_icon_size"
            android:padding="@dimen/rc_text_padding"
            tools:text="" />

    </LinearLayout>

</LinearLayout>