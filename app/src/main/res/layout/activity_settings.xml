<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/space_cadet">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/navigation_buttons_height"
        >

        <include
            android:id="@+id/include_add_location_header"
            layout="@layout/header_icon"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_default="wrap"
            app:layout_constraintWidth_default="spread"
            android:visibility="visible">
        </include>

        <LinearLayout
            android:id="@+id/layout_add_location_input_outer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/include_add_location_header"
            android:orientation="vertical"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/layout_add_location_input_inner_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_ad_attribute_distance_title"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/rc_icon_size"
                        android:padding="@dimen/rc_text_padding"
                        android:textColor="#000"
                        android:textSize="@dimen/extra_large_text_size"
                        android:text="Radius"/>

                    <TextView
                        android:id="@+id/textView_ad_attribute_distance_value"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/rc_icon_size"
                        android:padding="@dimen/rc_text_padding"
                        android:textColor="#000"
                        android:textSize="@dimen/extra_large_text_size"
                        android:text="0 meters"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <SeekBar
                    android:id="@+id/seekBar_ad_attribute_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/rc_icon_size"
                    android:padding="@dimen/rc_text_padding"
                    android:max="100"
                    android:progress="50"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/navigation_buttons"/>

</androidx.constraintlayout.widget.ConstraintLayout>