<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/rc_item_padding"
    android:background="@color/white"
    android:layout_margin="@dimen/rc_item_margin"
    >

    <TextView
        android:id="@+id/textView_ad_attribute_title"
        android:layout_width="@dimen/rc_item_textbox_size"
        android:layout_marginStart="@dimen/rc_icon_size"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="30sp"
        android:padding="@dimen/rc_text_padding"
        android:text="Attribute" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Spinner
            android:id="@+id/spinner_ad_attribute_setting"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginStart="@dimen/rc_icon_size"
            android:padding="@dimen/rc_text_padding"
            />

        <Button
            android:id="@+id/button_ad_attribute_go"
            android:layout_gravity="center"
            android:layout_width="@dimen/rc_icon_size"
            android:layout_height="@dimen/rc_icon_size"
            android:text="Go!"
            />


    </LinearLayout>


</LinearLayout>