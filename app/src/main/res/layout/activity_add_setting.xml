<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/include_add_setting_header"
        layout="@layout/header_icon"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintWidth_default="spread"
        android:visibility="visible">
    </include>

    <LinearLayout
        android:id="@+id/layout_add_setting_input_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/include_add_setting_header"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_add_setting_input_inner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_ad_setting_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/rc_icon_size"
                android:padding="@dimen/rc_text_padding"
                android:textColor="#000"
                android:textSize="@dimen/extra_large_text_size"
                android:text="Setting"/>

            <Spinner
                android:id="@+id/spinner_ad_setting"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_marginStart="@dimen/rc_icon_size"
                android:padding="@dimen/rc_text_padding"
                />

        </LinearLayout>

    </LinearLayout>

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/navigation_buttons"/>
</androidx.constraintlayout.widget.ConstraintLayout>