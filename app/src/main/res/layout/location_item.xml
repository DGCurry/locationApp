<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/fulvous"
    android:transitionName="location_transition">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/rc_item_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_location"
                android:layout_width="@dimen/rc_icon_size"
                android:layout_height="@dimen/rc_icon_size"
                android:layout_gravity="center"
                android:transitionName="icon_transition"
                android:src="@drawable/ic_launcher_background"/>

            <TextView
                android:id="@+id/textView_distance_title"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="match_parent"
                android:textColor="#000"
                android:textSize="@dimen/extra_large_text_size"
                android:padding="@dimen/rc_text_padding"
                android:transitionName="title_transition"
                android:text="Location"/>

            <Button
                android:id="@+id/button_invisible"
                android:layout_gravity="center"
                android:layout_width="@dimen/rc_icon_size"
                android:layout_height="@dimen/rc_icon_size"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_ad_location_latitude"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:textSize="@dimen/large_text_size"
                android:layout_marginStart="@dimen/rc_icon_size"
                android:padding="@dimen/rc_text_padding"
                android:text="latitude" />

            <TextView
                android:id="@+id/textView_ad_location_longitude"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:textSize="@dimen/large_text_size"
                android:layout_marginStart="@dimen/rc_icon_size"
                android:padding="@dimen/rc_text_padding"
                android:text="longitude" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_main_location_latitude"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:textSize="@dimen/normal_text_size"
                android:layout_marginStart="@dimen/rc_icon_size"
                android:padding="@dimen/rc_text_padding"/>

            <TextView
                android:id="@+id/textView_main_location_longitude"
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:layout_height="match_parent"
                android:textSize="@dimen/normal_text_size"
                android:layout_marginStart="@dimen/rc_icon_size"
                android:padding="@dimen/rc_text_padding"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>