<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/extra_large_text_size"
        android:text="Add location or new Attribute"
        android:padding="@dimen/rc_text_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/choose_location"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_max="400dp"
        app:layout_constraintVertical_weight="1"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:orientation="vertical" >

        <include
            layout="@layout/header" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_list_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/rc_item_margin"
            android:overScrollMode="never"
            app:layout_constrainedHeight="true"
            app:layout_constraintWidth_default="wrap"
            android:visibility="visible"/>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/add_location"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        app:layout_constraintTop_toBottomOf="@+id/choose_location"
        android:orientation="vertical" >

        <include
            layout="@layout/header" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_turn_on_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/rc_item_margin"
            app:layout_constraintTop_toBottomOf="@id/active_location"
            android:visibility="visible"
            android:background="@color/black" >

            <include
                layout="@layout/subheader" />

        </androidx.cardview.widget.CardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/navigation_buttons"/>

</androidx.constraintlayout.widget.ConstraintLayout>